# Producción en Koyeb
NODE_ENV=production

# Base de datos PostgreSQL (requerido para producción)
# Obtén este valor de Neon o tu proveedor de PostgreSQL
# Formato: postgresql://usuario:contraseña@host:puerto/base_datos
DATABASE_URL=postgresql://usuario:contraseña@localhost:5432/user_management

# Puerto (Koyeb generalmente usa 3000)
PORT=3000

# JWT Secret (genera uno seguro)
JWT_SECRET=tu_jwt_secret_super_seguro_aqui

# Duración de tokens JWT (en segundos)
JWT_EXPIRATION=3600
